<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  	<net.ptrbrtz.adbs.SourcesView 
    	android:id="@+id/sources_mover_view"
		android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    />
	<LinearLayout
    	android:orientation="vertical"
    	android:id="@+id/buttons_layout"
		android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true"
    	>
		<View android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:background="#FFAAAAAA" />
		<LinearLayout
	    	android:orientation="horizontal"
			android:layout_width="fill_parent" 
	    	android:layout_height="50dip"
	    	>
			<ImageButton android:id="@+id/zoomin_button"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:src="@drawable/zoomin"
			    android:background="@drawable/button_background"
			/>
			<View android:layout_width="1px"
			    android:layout_height="fill_parent"
			    android:background="#FFAAAAAA"
			/>
			<ImageButton
		    	android:id="@+id/zoomout_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent" 
		    	android:layout_weight="1"
				android:src="@drawable/zoomout"
				android:background="@drawable/button_background"
		    />
			<View
				android:layout_width="1px"
				android:layout_height="fill_parent"
				android:background="#FFAAAAAA"
			/>			
			<ImageButton
		    	android:id="@+id/settings_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1" 
				android:src="@drawable/settings"
				android:background="@drawable/button_background"
		    />
	    </LinearLayout>
					
    </LinearLayout>

	<RelativeLayout
	    android:id="@+id/help_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#DD444444"
	    android:visibility="invisible" >

		<ScrollView 
		    android:id="@+id/ScrollView02"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:scrollbarAlwaysDrawVerticalTrack="false"
		    android:fadeScrollbars="true">
	
	    	<TextView
	    	    android:id="@+id/help_textview"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_centerInParent="true"
	    	    android:layout_margin="20dp"
	    	    android:gravity="center_horizontal"
	    	    android:text="help text"
	    	    android:autoLink="web"
	    	    android:textColor="#FFFFFFFF"
	    	    android:textColorLink="#FFFFFFFF"/>
		</ScrollView>
    </RelativeLayout>
    
	<RelativeLayout
    	android:id="@+id/transport_layout"
		android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
		android:background="#A0000000"
    	android:visibility="invisible"
    	>
		<LinearLayout
	    	android:orientation="vertical"
			android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"
	    	>
			<LinearLayout
		    	android:orientation="vertical"
				android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content"
		    	>
			    <View
					android:layout_width="fill_parent"
					android:layout_height="1px"
					android:background="#FFFFFFFF"
				/>			
			    <Button
			    	android:id="@+id/options_button"
					android:layout_width="fill_parent" 
			    	android:layout_height="60dip"
			    	android:layout_weight="1"
					android:text="Options..."
					android:textColor="#FFFFFFFF"
					android:background="@drawable/button_background"
			    />
				<View
					android:layout_width="fill_parent"
					android:layout_height="1px"
					android:background="#FFFFFFFF"
				/>			
				<View
					android:layout_width="fill_parent"
					android:layout_height="20dp"
					android:background="#00000000"
				/>			
			</LinearLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>			
			<LinearLayout
		    	android:orientation="horizontal"
				android:layout_width="fill_parent" 
		    	android:layout_height="120dip"
		    	>
				<ImageButton
			    	android:id="@+id/rewind_button"
					android:layout_width="fill_parent" 
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1"
					android:src="@drawable/rewind"
					android:background="@drawable/button_background"
			    />
				<View
					android:layout_width="1px"
					android:layout_height="fill_parent"
					android:background="#FFFFFFFF"
				/>			
				<ImageButton 
					android:id="@+id/play_button"
					android:layout_width="fill_parent" 
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1" 
					android:src="@drawable/play"
					android:background="@drawable/button_background"
					android:visibility="gone"
				/>
				<ImageButton 
					android:id="@+id/pause_button"
					android:layout_width="fill_parent" 
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1" 
					android:src="@drawable/pause"
					android:background="@drawable/button_background"
				/>
				<View
					android:layout_width="1px"
					android:layout_height="fill_parent"
					android:background="#FFFFFFFF"
					android:visibility="gone"
				/>			
				<ImageButton
			    	android:id="@+id/exit_transport_button"
					android:layout_width="fill_parent" 
			    	android:layout_height="fill_parent"
			    	android:layout_weight="1" 
					android:background="@drawable/button_background"
					android:visibility="gone"
			    />
		    </LinearLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>			
	    </LinearLayout>
	    <RelativeLayout
			android:id="@+id/volume_layout"
			android:layout_width="fill_parent" 
	    	android:layout_height="45dip"
	   		android:layout_alignParentBottom="true"
	    	>
			<net.ptrbrtz.adbs.CustomSeekBar
				android:id="@+id/volume_seekbar"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:max="100" 
				android:thumb="@null"/>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content" 
	    		android:layout_height="wrap_content" 
		   		android:layout_centerInParent="true"
		    	>
		 		<TextView 
		    		android:text="@string/volume_label"
					android:layout_width="wrap_content" 
			    	android:layout_height="wrap_content" 
		    		android:layout_weight="1" 
		    		android:layout_marginRight="5dip" 
			    />
		 		<TextView 
					android:id="@+id/volume_textview"
					android:layout_width="wrap_content" 
			    	android:layout_height="wrap_content" 
		    		android:layout_weight="1" 
			    />
		    </LinearLayout>
		</RelativeLayout>
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/options_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#A0000000"
	    android:visibility="invisible" >

		<LinearLayout
	    	android:orientation="vertical"
			android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"
	    	>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>			
			<Button
		    	android:id="@+id/load_scene_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="70dip"
		    	android:layout_weight="1"
				android:text="Load Scene..."
				android:textColor="#FFFFFFFF"
				android:background="@drawable/button_background"
		    />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>			
			<Button
		    	android:id="@+id/load_hrirs_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="70dip"
		    	android:layout_weight="1"
				android:text="Load HRIRs..."
				android:textColor="#FFFFFFFF"
				android:background="@drawable/button_background"
		    />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>
			<Button
		    	android:id="@+id/audio_settings_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="70dip"
		    	android:layout_weight="1"
				android:text="Audio Settings..."
				android:textColor="#FFFFFFFF"
				android:background="@drawable/button_background"
		    />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>
			<Button
		    	android:id="@+id/help_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="70dip"
		    	android:layout_weight="1"
				android:text="Info &amp; Help..."
				android:textColor="#FFFFFFFF"
				android:background="@drawable/button_background"
		    />
			<View
				android:layout_width="fill_parent"
				android:layout_height="1px"
				android:background="#FFFFFFFF"
			/>
			<ImageButton
		    	android:id="@+id/exit_options_button"
				android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1" 
				android:background="@drawable/button_background"
				android:visibility="gone"
		    />
	    </LinearLayout>
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/audio_settings_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#DCCC"
	    android:visibility="invisible" >

	    <ScrollView 
		    android:id="@+id/ScrollView01"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:scrollbarAlwaysDrawVerticalTrack="true"
		    android:fadeScrollbars="false">
			
			<GridLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="20dp"
			    android:columnCount="3"
			    android:useDefaultMargins="false" >
	
			    <TextView
			        android:id="@+id/textView100"
			        android:layout_columnSpan="3"
			        android:layout_gravity="left"
			        android:layout_marginBottom="5dp"
			        android:text="Audio Settings"
			        android:textAppearance="@android:style/TextAppearance.Large" />
			    
			    <TextView
			        android:id="@+id/textView5"
			        android:layout_columnSpan="3"
			        android:layout_gravity="left"
			        android:layout_marginBottom="5dp"
			        android:layout_marginTop="10dp"
			        android:text="Device Settings"
			        android:textAppearance="@android:style/TextAppearance.Medium" />
			    
			    <TextView
			        android:id="@+id/textView64"
			        android:layout_gravity="left"
			        android:text="OpenSL Block Size" />
	
			    <Space 
				/>
	
			    <TextView
			        android:id="@+id/opensl_block_size_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0" />
	
			    <TextView
			        android:id="@+id/textView73"
			        android:layout_gravity="left"
			        android:text="OpenSL Sample Rate" />
	
			    <Space 
				/>
	
			    <TextView
			        android:id="@+id/opensl_samplerate_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0" />
	
			    <TextView
			        android:id="@+id/textView1"
			        android:layout_columnSpan="3"
			        android:layout_gravity="left"
			        android:layout_marginBottom="5dp"
			        android:layout_marginTop="15dp"
			        android:text="App Settings"
			        android:textAppearance="@android:style/TextAppearance.Medium" />
	
    		    <TextView
    		        android:id="@+id/textView12"
    		        android:layout_gravity="left"
    		        android:text="Processing Sample Rate" />
	
			    <Space 
					android:layout_width="10dp"         
				/>
	
			    <TextView
			        android:id="@+id/processing_samplerate_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="44100" />
	
				<TextView
				    android:id="@+id/textView11"
				    android:layout_gravity="left"
				    android:layout_marginBottom="10dp"
				    android:text="Current HRIR Length" />
	
			    <Space 
				/>
	
			    <TextView
			        android:id="@+id/hrir_length_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0.00" />
	
			    <TextView
			        android:id="@+id/textView2"
			        android:layout_gravity="left"
			        android:text="Processing Block Size" />
	
			    <Space 
					android:layout_width="10dp"         
				/>
	
			    <TextView
			        android:id="@+id/processing_block_size_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0.0" />
	
			    <net.ptrbrtz.adbs.ExponentialSeekBar
			        android:id="@+id/processing_block_size_seekbar"
			        android:layout_width="match_parent"
			        android:layout_columnSpan="3"
			        android:layout_gravity="fill_horizontal"
			        android:layout_marginBottom="10dp"
			        android:max="100000000" />
	
			    <TextView
			        android:id="@+id/textView3"
			        android:layout_gravity="left"
			        android:text="Ring Buffer Size Multiplier" />
	
			    <Space 
				/>
			    
			    <TextView
			        android:id="@+id/ring_buf_multiplier_tv"
			        android:layout_gravity="left"
			        android:text="0" />
	
			    <TextView
			        android:id="@+id/textView33"
			        android:layout_gravity="left"
			        android:text="Ring Buffer Size" />
	
			    <Space 
				/>
			    
			    <TextView
			        android:id="@+id/ring_buf_size_tv"
			        android:layout_gravity="left"
			        android:text="0.0" />
	
			    <net.ptrbrtz.adbs.ExponentialSeekBar
			        android:id="@+id/ring_buf_size_seekbar"
			        android:layout_width="match_parent"
			        android:layout_columnSpan="3"
			        android:layout_gravity="fill_horizontal"
			        android:layout_marginBottom="10dp"
			        android:max="100000000" />
	
			    <TextView
			        android:id="@+id/textView4"
			        android:layout_gravity="left"
			        android:text="Cross-fade Overlap Size" />
	
			    <Space 
				/>
			    
			    <TextView
			        android:id="@+id/crossfade_overlap_size_tv"
			        android:layout_gravity="left"
			        android:text="0.0" />
	
			    <net.ptrbrtz.adbs.ExponentialSeekBar
			        android:id="@+id/crossfade_overlap_size_seekbar"
			        android:layout_width="match_parent"
			        android:layout_columnSpan="3"
			        android:layout_gravity="fill_horizontal"
			        android:max="100000000" />
	
				<TextView
			        android:id="@+id/textView8"
			        android:layout_columnSpan="3"
			        android:layout_gravity="left"
			        android:layout_marginBottom="5dp"
			        android:layout_marginTop="15dp"
			        android:text="Resulting Settings"
			        android:textAppearance="@android:style/TextAppearance.Medium" />
			    
			    <TextView
			        android:id="@+id/textView9"
			        android:layout_gravity="left"
			        android:text="Min. FFT Block Size" />
	
			    <Space 
				/>
	
			    <TextView
			        android:id="@+id/min_fft_block_size_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0" />
	
			    		    <TextView
			    		        android:id="@+id/textView10"
			    		        android:layout_gravity="left"
			    		        android:text="Resulting FFT Block Size (with\nsmall prime factorization)" />
	
			    <Space 
				/>
	
			    <TextView
			        android:id="@+id/actual_fft_block_size_tv"
			        android:layout_width="wrap_content"
			        android:layout_gravity="left"
			        android:text="0"
			        android:textStyle="bold" />
	
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_columnSpan="3"
				    android:layout_gravity="fill_horizontal"
				    android:layout_marginTop="15dp" >
		
					<Button
					    android:id="@+id/audio_settings_ok_button"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="1"
					    android:text="Apply" />
		
					<Button
					    android:id="@+id/audio_settings_cancel_button"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="1"
					    android:text="Close" />
		
				</LinearLayout>
			    		    
			</GridLayout>
		
		</ScrollView>

	</RelativeLayout>
	
	
	
	
	
</RelativeLayout>
